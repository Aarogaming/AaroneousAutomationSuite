root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{bat,cmd}]
end_of_line = crlf

[*.{cs,csproj,fsproj,sln}]
indent_size = 4

[*.{py,ps1,psm1}]
indent_size = 4

[*.{json,yml,yaml,js,ts,tsx,css,scss,html,xml}]
indent_size = 2

[Makefile]
indent_style = tab
