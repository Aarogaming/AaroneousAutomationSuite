{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aas.local/contracts/contracts-index/v1",
  "title": "ContractsIndex v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaName", "schemaVersion", "generatedUtc", "schemas"],
  "properties": {
    "schemaName": { "const": "ContractsIndex" },
    "schemaVersion": { "const": "1.0.0" },
    "generatedUtc": { "type": "string", "format": "date-time" },
    "schemas": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/schemaEntry" }
    }
  },
  "definitions": {
    "schemaEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "file", "id", "channel", "owners", "status"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
        "file": { "type": "string", "minLength": 1 },
        "id": { "type": "string", "minLength": 1 },
        "channel": { "type": "string", "minLength": 1 },
        "owners": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "status": { "type": "string", "enum": ["active", "deprecated", "experimental"] }
      }
    }
  }
}
