# ==============================================================================
# Aaroneous Automation Suite (AAS) - Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file - it contains secrets!

# ==============================================================================
# AI & External Services (REQUIRED)
# ==============================================================================

# OpenAI API Key - REQUIRED for AI assistant functionality
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# OpenAI Model - Which model to use for AI operations
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.
OPENAI_MODEL=gpt-4

# Linear API Key - OPTIONAL for bi-directional task sync
# Get yours at: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_your-key-here

# Linear Team ID - Required if using Linear integration
# Find it in your Linear workspace settings
LINEAR_TEAM_ID=your-team-id

# ==============================================================================
# Core Settings
# ==============================================================================

# Debug Mode - Enable verbose logging (true/false)
DEBUG_MODE=false

# Plugin Directory - Where to load plugins from
PLUGIN_DIR=plugins

# Artifact Directory - Where handoff reports and task artifacts are stored
ARTIFACT_DIR=artifacts/handoff

# Project Registry - JSON list of registered projects
# Format: [{"id": "proj-id", "name": "Name", "root": "./path", "language": "python", "type": "hub"}]
PROJECTS='[{"id": "aas-core", "name": "Aaroneous Automation Suite", "root": "./", "language": "python", "type": "hub"}]'

# ==============================================================================
# Policy & Ethics
# ==============================================================================

# Policy Mode - How strictly to enforce policies
# Options: live_advisory, strict, permissive
POLICY_MODE=live_advisory

# Autonomy Level - How autonomous AI agents can be
# Options: advisory, semi_autonomous, fully_autonomous
AUTONOMY_LEVEL=advisory

# Require Consent - Whether critical operations need user approval (true/false)
REQUIRE_CONSENT=true

# Allow Screenshots - Whether AI can capture screenshots (true/false)
ALLOW_SCREENSHOTS=false

# ==============================================================================
# IPC Settings (Project Maelstrom Integration)
# ==============================================================================

# gRPC Port - Port for communication with Project Maelstrom
# Range: 1024-65535
IPC_PORT=50051

# gRPC Host - Host address for IPC server
IPC_HOST=localhost

# ==============================================================================
# Plugin-Specific Settings (OPTIONAL)
# ==============================================================================

# Home Assistant Integration
# URL of your Home Assistant instance
HOME_ASSISTANT_URL=http://homeassistant.local:8123

# Home Assistant long-lived access token
# Create at: Profile > Long-Lived Access Tokens
HOME_ASSISTANT_TOKEN=your-ha-token-here

# Ollama (Local LLM) Integration
# URL of your Ollama instance
OLLAMA_URL=http://localhost:11434

# ==============================================================================
# Notes
# ==============================================================================
# - All UPPERCASE variables are loaded automatically via Pydantic
# - SecretStr fields (API keys, tokens) are protected in memory
# - Invalid values will trigger warnings and use safe defaults
# - Missing required fields (OPENAI_API_KEY) will prevent startup
# - See core/config/manager.py for full field documentation
